<% content_for :body_class, "unauthenticate" %>

<div class="box-login">
  <div class="logo">
    <%= image_tag("opinion-park-logo.png") %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-login", data: {turbo: "false"}) do |f| %>
    <div class="form-login__input">
      <label><%= t "administrator.sessions.new.email" %></label>
      <%= f.text_field :email, autofocus: true,
        placeholder: t("administrator.sessions.new.placeholder_email") %>
    </div>
    <div class="form-login__input">
      <label><%= t "administrator.sessions.new.password" %></label>
      <%= f.password_field :password, placeholder: t("administrator.sessions.new.placeholder_password") %>
    </div>
    <button class="form-login__submit" type="submit"><%= t("administrator.sessions.new.submit") %></button>
  <% end %>
</div>

